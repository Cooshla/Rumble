<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RumbleApp.Core.UI.Pages.Account.Login">
    <ScrollView Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Vertical" Padding="50,100,50,50" Spacing="10">

            <Image Source="full_logo" HorizontalOptions="FillAndExpand" />
            <BoxView HeightRequest="20" WidthRequest="0" />

            <Entry Placeholder="Username" x:Name="txtUsername" Keyboard="Email" Text="{Binding UserName}" Style="{DynamicResource entryStyle}" />

            <BoxView Style="{DynamicResource hrStyle}" /> 
            <Entry Placeholder="Password" IsPassword="true" x:Name="txtPassword" Text="{Binding Password}" Style="{DynamicResource entryStyle}" />

            <BoxView Style="{DynamicResource hrStyle}" />


            <BoxView HeightRequest="20" WidthRequest="0" />

            <Button x:Name="btnLogin" Text="Login" Command="{Binding LoginCommand}" />
            <Button x:Name="btnSignUp" Text="Sign Up"  Command="{Binding SignupCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>